{
    "info": {
        "_postman_id": "d6d52ce0-1de7-47d5-88e9-3abf882507ec",
        "name": "Semantic-FAQ-Assistant",
        "description": "API collection for testing the Semantic FAQ Assistant endpoints. This collection includes requests for authentication and FAQ question processing.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "FAQ-Chatbot-Call",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{BEARER_TOKEN}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\r\n    \"question_text\": \"how do I reset my password?\",\r\n    \"model\": \"gpt-4o-mini\", \r\n    \"temperature\": 0.7,\r\n    \"similarity_threshold\": 0.7\r\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{BASE_URL}}/ask-question",
                    "protocol": "http",
                    "host": [
                        "{{BASE_URL}}"
                    ],
                    "path": [
                        "ask-question"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "GenerateToken",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "//save token to env var\r",
                            "var jsonData = pm.response.json();\r",
                            "pm.environment.set(\"BEARER_TOKEN\", jsonData.access_token);"
                        ],
                        "type": "text/javascript",
                        "packages": {}
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "username",
                            "value": "{{USERNAME}}",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "{{PASSWORD}}",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "{{BASE_URL}}/token",
                    "protocol": "http",
                    "host": [
                        "{{BASE_URL}}"
                    ],
                    "path": [
                        "token"
                    ]
                }
            },
            "response": []
        }
    ]
}